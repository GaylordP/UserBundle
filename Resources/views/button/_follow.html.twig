{% if false == user.__isUserFollowed %}
    {{ 'action.follow'|trans({}, 'user')|button_link(
        path('user_follow',
            {
                'slug': user.slug,
            }
        ),
        'secondary',
        'fas fa-user-plus',
        false,
        {
            'class': 'btn-sm',
        }
    ) }}
{% else %}
    {{ 'action.unfollow'|trans({}, 'user')|button_link(
        path('user_follow',
            {
                'slug': user.slug,
            }
        ),
        'red',
        'fas fa-user-times',
        false,
        {
            'class': 'btn-sm',
        }
    ) }}
{% endif %}