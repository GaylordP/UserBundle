{% if app.user != user %}
    {% if false == user.__isUserFollowed %}
        {{ 'action.follow'|trans({}, 'user')|button_link(
            path('user_follow',
                {
                    'slug': user.slug,
                }
            ),
            'red',
            include('@User/user/follow/_follow_ico.html.twig', with_context = false),
            false,
            {
                'class': 'btn-sm user-follow',
                'data-user-slug': user.slug,
            }
        ) }}
    {% else %}
        {{ 'action.unfollow'|trans({}, 'user')|button_link(
            path('user_follow',
                {
                    'slug': user.slug,
                }
            ),
            'secondary',
            include('@User/user/follow/_unfollow_ico.html.twig', with_context = false),
            false,
            {
                'class': 'btn-sm user-follow',
                'data-user-slug': user.slug,
            }
        ) }}
    {% endif %}
{% endif %}