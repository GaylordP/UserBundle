{% if app.user != user %}
    {% if false == user.__isUserFollowed %}
        {{ 'action.follow'|trans({}, 'user')|button_link(
            path('user_follow',
                {
                    'slug': user.slug,
                }
            ),
            'red',
            'fas fa-user-plus',
            false,
            {
                'class': 'btn-sm user-follow-' ~ user.slug,
                'data-front-common-ajax': 'true',
            }
        ) }}
    {% else %}
        {{ 'action.unfollow'|trans({}, 'user')|button_link(
            path('user_follow',
                {
                    'slug': user.slug,
                }
            ),
            'secondary',
            'fas fa-user-times',
            false,
            {
                'class': 'btn-sm user-follow-' ~ user.slug,
                'data-front-common-ajax': 'true',
            }
        ) }}
    {% endif %}
{% endif %}