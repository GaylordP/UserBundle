{% if remove_link is not defined %}
    {{ ('@' ~ user.username)|button_link(
        path('member_profile',
            {
                'slug': user.slug,
            }
        ),
        user.color.slug,
        null,
        false,
        {
            'class': 'btn-sm',
            'data-toggle': 'tooltip',
            'title': 'label.show_profile'|trans({}, 'user')
        }
    ) }}
{% else %}
    {{ ('@' ~ user.username)|label(
        user.color.slug,
        null,
        false,
        {
            'class': 'label-sm',
        }
    ) }}
{% endif %}