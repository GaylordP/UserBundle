{% extends 'default/template/template.html.twig' %}

{% block title %}
    <i class="{{ include('@User/notification/_ico.html.twig', with_context = false) }}"></i>
    {{ 'title.user.notification'|trans({}, 'user') }}
{% endblock %}

{% block content %}
    {% if notifications.results is not empty %}
        <ul class="notification-list paginator-content">
            {{ include('@User/notification/_list.html.twig',
                {
                    'notifications': notifications,
                },
                with_context = false
            ) }}
        </ul>
        {{ renderPaginator(notifications, 'user_notification_paginated',
            {},
            {
                'class': 'justify-content-center mt-3',
            },
            'title.user.notification.pagination'|trans({}, 'user')
        ) }}
    {% else %}
        <div class="alert alert-danger mb-0">
            <p class="mb-0">
                {{ 'user.notification.not_found'|trans({}, 'user') }}
            </p>
        </div>
    {% endif %}
{% endblock %}