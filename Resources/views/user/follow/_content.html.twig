<div class="card mb-3">
    <div class="card-header">
        <h2 class="h6 mb-0">
            <i class="{{ include('@User/user/follow/_my_follower_ico.html.twig', with_context = false) }}"></i>
            {{ 'title.user.follow.my_followers'|trans({}, 'user') }}
            <span class="badge badge-primary" id="user-follow-follower-length">
                {{ my_followers|length }}
            </span>
        </h2>
    </div>
    <div class="card-body" id="user-follow-follower" data-empty-message="{{ 'user.follow.nothing'|trans({}, 'user') }}">
        {% if my_followers is not empty %}
            <ul class="user-follow-list">
                {% apply spaceless %}
                    {% for follower in my_followers %}
                        {{ include('@User/user/follow/_follower_item.html.twig',
                            {
                                'user': follower.createdBy,
                            },
                            with_context = false
                        ) }}
                    {% endfor %}
                {% endapply %}
            </ul>
        {% else %}
            <div class="alert alert-danger mb-0">
                <p class="mb-0">
                    {{ 'user.follow.nothing'|trans({}, 'user') }}
                </p>
            </div>
        {% endif %}
    </div>
</div>
