{% apply spaceless %}
        {% if 15 == size %}
            {% set online_size = '10' %}
        {% elseif 25 == size %}
            {% set online_size = '12_5' %}
        {% elseif 65 == size %}
            {% set online_size = '1' %}
        {% elseif 85 == size %}
            {% set online_size = '22_5' %}
        {% endif %}
        {% if null != user.userMedia %}
            <img src="{{ asset(media_resize(user.userMedia.media, size, size, 'square')) }}" alt="{{ 'label.user.media.profile'|trans(
                {
                    '%username%': user.username,
                },
                'user'
            ) }}" class="user-media-profile border-{{ user.color.slug }}">
        {% else %}
            <i class="fas fa-user-circle text-{{ user.color.slug }} fa-user-circle-px-{{ size }}" style="font-size: {{ size }}px"></i>
        {% endif %}
{% endapply %}